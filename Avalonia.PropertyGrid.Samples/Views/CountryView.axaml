<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Avalonia.PropertyGrid.Samples.Views">
  <Design.PreviewWith>
    <controls:CountryView />
  </Design.PreviewWith>

  <Style Selector="controls|CountryView">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
          <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="Auto,Auto">
              <Image Grid.RowSpan="2" Source="{Binding Flag}" Width="100" Height="60" Margin="2"></Image>
              <TextBlock VerticalAlignment="Center" Grid.Column="1" FontWeight="Bold" Text="{Binding Name}" Margin="10,2,10,2"></TextBlock>
              <TextBlock VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Text="{Binding Code}" Margin="10,2,10,2"></TextBlock>
          </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
