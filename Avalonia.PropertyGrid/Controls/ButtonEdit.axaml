<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:lu="clr-namespace:Avalonia.PropertyGrid.Utils;assembly=Avalonia.PropertyGrid"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="36"
             x:Class="Avalonia.PropertyGrid.Controls.ButtonEdit">
	<Grid ColumnDefinitions="*,Auto">
		<TextBox x:Name="TextEdit"
				 Grid.Column="0"
				 VerticalContentAlignment="Center"
				 FontFamily="{x:Static lu:FontUtils.DefaultFontFamily}"
				 PropertyChanged="OnTextEditPropertyChanged" ></TextBox>
		<Button x:Name="BrowserButton"
				Grid.Column="1"
				Margin="2"
				Click="OnButtonClicked" >...</Button>
	</Grid>
</UserControl>
